---
export interface Props {
    title: string;
    description: string;
    rotate: string;
    rotateMobile: string;
    margin: string;
    bgColor: string;
}

const {description, title, rotate, rotateMobile, margin, bgColor} = Astro.props;
---

<div class=`flex flex-col md:text-start text-center transform md:${rotate} ${rotateMobile} p-3 rounded-2xl md:mt-0 ${margin}`
     style={`background-color: ${bgColor}`}>
    <h3 class="md:text-3xl text-xl text-primary font-medium">
        {title}
    </h3>
    <p class="md:text-base text-xs text-primary font-medium mt-2">
        {description}
    </p>
</div>
