---
export interface Props {
    quizVisibility: string;
}

const {quizVisibility} = Astro.props;
---

<button class=`simple-button bg-light-purple rounded-full ${quizVisibility}`>
    Take a quiz
</button>
<a class="simple-button bg-light-pink" href="https://t.me/nickaxel" target="_blank">
    Contact us
</a>

<style>
    .simple-button {
        @apply min-w-[125px] text-center text-primary md:px-4 md:py-3.5 px-3 py-3 md:mt-10 mt-6 font-semibold md:hover:scale-110 md:hover:shadow-lg hover:scale-105 hover:shadow-lg transition-all duration-300 ease-in-out;
    }
</style>
