---
export interface Props {
    title: string;
    description: string;
    keywords: string;
}

const {title, description, keywords} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content={description}/>
    <meta name="keywords" content={keywords}/>
    <link rel="icon" type="image/svg+xml" href="/favicon.png"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<script async src="https://www.googletagmanager.com/gtag/js?id=G-WF22W21DFM"></script>
<script>
    window.dataLayer = window.dataLayer || [];

    function gtag() {
        dataLayer.push(arguments);
    }

    gtag('js', new Date());

    gtag('config', 'G-WF22W21DFM');
</script>

<script async>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s);
        js.id = id;
        js.src = 'https://www.paypal.com/sdk/js?client-id=' + import.meta.env.PAYPAL_CLIENT_ID + '&currency=USD';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'paypal-js'));
</script>
<body>
<slot/>
</body>
</html>
<style is:global>
    button {
        @apply transition-colors duration-300 ease-in-out;
    }

    body {
        min-height: 100vh;
    }

    .get-started:hover button {
        background-color: #000;
        color: #fff;
    }
</style>
